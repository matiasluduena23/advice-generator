---
const dividerMobileImg = '/images/pattern-divider-mobile.svg';
const dividerDesktopImg = '/images/pattern-divider-desktop.svg';
const iconImg = '/images/icon-dice.svg';
---

<main>
    <p>Advice # <span class="id"></span></p>
    <h1>"<span class="advice"></span>"</h1>
    <picture>
        <source media="(min-width:650px)" srcset={dividerDesktopImg} />
        <img src={dividerMobileImg} alt="divider" />
    </picture>
    <button class="btn">
        <img src={iconImg} alt="icon dice button" />
    </button>
</main>
<style>
    main {
        background-color: var(--medium-blue);
        color: var(--gray-blue);
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 2rem;
        padding: 2.5rem 1rem;
        border-radius: 15px;
        position: relative;
        max-width: 530px;
    }

    p {
        color: var(--green-clr);
        text-transform: uppercase;
        letter-spacing: 2px;
        font-weight: lighter;
    }

    h1 {
        color: var(--cyan-clr);
        font-size: 1.5rem;
        text-align: center;
    }
    picture {
        margin-bottom: 1rem;
    }

    .btn {
        position: absolute;
        bottom: -30px;
        padding: 1rem;
        border-radius: 50%;
        border: none;
        background-color: var(--green-clr);
        cursor: pointer;
    }

    .btn:hover {
        box-shadow: 2px 0px 40px 0px rgba(82, 255, 168, 04);
    }

    @media (min-width: 800px) {
        main {
            padding-inline: 2rem;
        }
    }
</style>
